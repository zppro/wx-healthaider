.userinfo {
  display: flex;
  flex-direction: column;
  /*flex-flow: wrap;*/
  align-items: center;
  width: 100%;
  /*background-image: url('/../../images/banner.jpg');*/
  background-size: 100% 100%;
  height: 150px;
  box-sizing: border-box;
}
.banner-img-box{
    width: 100%;
    display: flex;
    height: 10px;
}
.banner-img{
    width: 100%;
    height: 150px;
}
.userinfo-space-top {
  width:100%;
  text-align: right;
}
.icon-iconshezhi01{
    margin-right:25px;
    color:white;
    font-size: 13px;
}
.userinfo-avatar-c {
  flex: 5;
}

.userinfo-avatar-c2 {
  padding: 2px;
  width: 128rpx;
  height: 128rpx;
  background-color: rgba(255,255,255,.8);
  border-radius: 50%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  border-radius: 50%;
  opacity: 1;
  vertical-align: middle;
}

.userinfo-nickname {
  flex: 2.5;
  color: white;
}

.my-manage-item {
  background-color: white;
  height: 50px;
  padding: 0 8px;
  margin-top:1px;
  position: relative;
}
.my-manage-item-icon-c-share {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  text-align: center;
  display: inline-block;
  color: white;
}
.my-manage-item-icon-c{
